    <div class="margin-top">
        <div id="list">
            <?php echo $this->createPartialHtml('no_item', 'core_view_default', 'application/customization/features/edit/no_item.phtml'); ?>
            <?php if ($pages->count()) : ?>
                <h3 class="title-editor no-border-radius title-feature-indent">
